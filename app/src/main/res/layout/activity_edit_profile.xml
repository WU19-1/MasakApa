<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.EditProfile"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="0dp"
        android:background="@android:color/transparent"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="-24dp"
            app:cardElevation="8dp"
            android:background="@android:color/transparent"
            app:cardBackgroundColor="#FFCD89"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/login"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/edit_profile_change_pp"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:src="@drawable/user"
                        app:border_width="8dp"
                        app:border_color="@android:color/white"
                        android:id="@+id/edit_profile_pp"
                        >

                    </de.hdodenhof.circleimageview.CircleImageView>
                    <Button
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_add_circle_black_24dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="95dp"
                        />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="50dp"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="30dp"
                        android:id="@+id/edit_profile_name"
                        android:paddingVertical="12dp"
                        android:maxLength="25"
                        android:layout_marginHorizontal="40dp"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="I am new to Masak Apa!"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="14dp"
                        android:id="@+id/edit_profile_status"
                        />

                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_register"
            android:layout_marginHorizontal="20dp"
            android:text="Change password"
            android:id="@+id/edit_profile_change_pw"
            />

        <Button
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_login"
            android:layout_marginHorizontal="20dp"
            android:text="Update profile"
            android:id="@+id/edit_profile_update_profile"
            />

    </LinearLayout>

</LinearLayout>