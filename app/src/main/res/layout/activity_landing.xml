<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".landing.LandingActivity"
    android:orientation="vertical"
    android:weightSum="2"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1.43"
        app:cardCornerRadius="0dp"
        android:background="@android:color/white"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/white"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="-24dp"
            android:id="@+id/cardview_landing"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/white"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2"
                android:background="@drawable/bg_landing_page"
                >

                <androidx.viewpager.widget.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/landing_pager"
                    android:layout_weight="1.8"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:id="@+id/dots"
                    android:layout_weight="0.2"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="•"
                        android:textAlignment="center"
                        android:textSize="45dp"
                        android:textColor="@android:color/white"
                        android:id="@+id/dot1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="•"
                        android:textAlignment="center"
                        android:textSize="45dp"
                        android:textColor="#70000000"
                        android:id="@+id/dot2"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="•"
                        android:textAlignment="center"
                        android:textSize="45dp"
                        android:textColor="#70000000"
                        android:id="@+id/dot3"
                        />


                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_weight="0.57"
        android:layout_marginHorizontal="4dp"
        android:layout_marginBottom="20dp"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="#6D6D6D"
            android:background="@drawable/landing_button"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="8dp"
            android:id="@+id/login_landing"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign in with Google"
            android:textColor="#6D6D6D"
            android:background="@drawable/landing_button"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="8dp"
            android:id="@+id/sign_in_with_google"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="8dp"
            >

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1.3"
                android:background="#70000000"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:text="ATAU"
                android:layout_weight="0.4"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12dp"
                android:textColor="#70000000"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1.3"
                android:background="#70000000"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                />


        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textColor="#6D6D6D"
            android:background="@drawable/landing_button"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="8dp"
            android:id="@+id/sign_up_landing"
            />

    </LinearLayout>

</LinearLayout>