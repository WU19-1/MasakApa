<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="165dp"
    android:id="@+id/forum_container"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:cardCornerRadius="24dp"
        android:background="@android:color/white"
        app:cardBackgroundColor="@android:color/white"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="12dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/user"
                android:layout_margin="20dp"
                android:id="@+id/forum_profile_pic"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:weightSum="1"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="Forum Title"
                    android:textColor="@android:color/black"
                    android:id="@+id/forum_title"
                    android:maxLines="1"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama pembuat"
                    android:textColor="@android:color/darker_gray"
                    android:id="@+id/forum_creator"
                    android:maxLines="1"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".9"
                    android:text="deskripsi tentang forum asdsadkalsdkalsljsljdasj djaasjdkjsaddd"
                    android:maxLines="2"
                    android:paddingTop="3dp"
                    android:paddingBottom="8dp"
                    android:id="@+id/forum_desc"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/msg" />

                        <TextView
                            android:id="@+id/forum_total_reply"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="6dp"
                            android:gravity="center_vertical"
                            android:text="0 replies" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/love" />

                        <TextView
                            android:id="@+id/forum_total_likes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="6dp"
                            android:gravity="center_vertical"
                            android:text="0 likes" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>





    </androidx.cardview.widget.CardView>


</LinearLayout>