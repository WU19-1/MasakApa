<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forum.NewForum"
    android:background="@drawable/forum_bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Forum"
            android:textSize="48dp"
            android:fontFamily="@font/title"
            android:textColor="@android:color/black"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Forum title"
            android:layout_marginVertical="10dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/new_forum_title"
                android:inputType="text"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/new_forum_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_area"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="top"
            android:hint="Forum Description"
            android:inputType="textCapSentences|textMultiLine"
            android:lines="10"
            android:maxLength="1000"
            android:padding="10dp"
            android:scrollHorizontally="false"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_login"
            android:text="Create forum thread"
            android:layout_marginVertical="12dp"
            android:id="@+id/new_forum_button"
            />

    </LinearLayout>

</LinearLayout>