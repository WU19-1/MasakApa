<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.fragments.ProfileFragment"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="0dp"
        android:background="@android:color/transparent"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="-24dp"
            app:cardElevation="8dp"
            android:background="@android:color/transparent"
            app:cardBackgroundColor="#FFCD89"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/login"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:src="@drawable/user"
                    app:border_width="8dp"
                    app:border_color="@android:color/white"
                    android:layout_marginTop="30dp"
                    android:id="@+id/profile_image"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="30dp"
                    android:id="@+id/profile_name"
                    android:paddingVertical="12dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I am new to Masak Apa!"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="14dp"
                    android:id="@+id/profile_status"
                    />

            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:textSize="24dp"
                android:textColor="@android:color/black"
                />
            <ImageView
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:visibility="invisible"
                android:src="@drawable/member_logo_crown"
                android:adjustViewBounds="true"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawablePadding="12dp"
                android:text="JohnDoe@gmail.com"
                android:id="@+id/profile_email"
                android:gravity="center_vertical"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginVertical="6dp"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="12dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/profile_membership"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/membership"
                    android:layout_marginVertical="4dp"
                    android:layout_marginRight="8dp"
                    android:padding="3dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Membership"
                    android:textColor="#B2000000"
                    android:textSize="18sp"
                    android:drawableRight="@drawable/profile_right"
                    android:gravity="center_vertical"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginVertical="6dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/profile_edit_profile"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/editprofile"
                    android:layout_marginVertical="4dp"
                    android:layout_marginRight="8dp"
                    android:padding="3dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Edit Profile"
                    android:textColor="#B2000000"
                    android:textSize="18sp"
                    android:drawableRight="@drawable/profile_right"
                    android:gravity="center_vertical"
                    />

            </LinearLayout>
<!--            <View-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="1dp"-->
<!--                android:background="@android:color/darker_gray"-->
<!--                android:layout_marginVertical="6dp"-->
<!--                />-->
<!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:orientation="horizontal"-->
<!--                android:id="@+id/profile_change_pw"-->
<!--                >-->

<!--                <ImageView-->
<!--                    android:layout_width="30dp"-->
<!--                    android:layout_height="30dp"-->
<!--                    android:src="@drawable/changepw"-->
<!--                    android:layout_marginVertical="4dp"-->
<!--                    android:layout_marginRight="8dp"-->
<!--                    android:padding="3dp"-->
<!--                    />-->

<!--                <TextView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:drawableRight="@drawable/profile_right"-->
<!--                    android:gravity="center_vertical"-->
<!--                    android:text="Change Password"-->
<!--                    android:textColor="#B2000000"-->
<!--                    android:textSize="18sp" />-->

<!--            </LinearLayout>-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginVertical="6dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/profile_logout"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/logout"
                    android:layout_marginVertical="4dp"
                    android:layout_marginRight="8dp"
                    android:padding="3dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Log Out"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="18sp"
                    android:drawableRight="@drawable/profile_right"
                    android:gravity="center_vertical"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>